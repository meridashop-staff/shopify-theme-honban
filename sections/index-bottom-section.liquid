    </picture></a></p>

<script>
// コンシェル追従ボタン
window.addEventListener('scroll', function () {
  const btnCon = document.getElementById('btnCon');

  if (window.scrollY > 90) {
    // アニメーション（CSSに依存する方法で実装）
    btnCon.style.transition = 'right 0.2s linear';
    btnCon.style.right = '0';

    // クリックイベントは一度だけ追加
    if (!btnCon.dataset.listenerAdded) {
      const span = btnCon.querySelector('span');
      span.addEventListener('click', function () {
        btnCon.style.right = '-226px';
        setTimeout(() => {
          btnCon.style.display = 'none';
        }, 200);
      });
      btnCon.dataset.listenerAdded = 'true';
    }

    // 再表示のために display をリセット
    btnCon.style.display = 'block';
  } else {
    btnCon.style.transition = 'right 0.2s linear';
    btnCon.style.right = '-226px';
  }
});
</script>
